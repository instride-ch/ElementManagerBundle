<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Wvision\Bundle\ElementManagerBundle\Model\DuplicateObject" table="wvision_element_manager_duplicate_object">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="object" type="pimcoreObject" column="object"/>
        <field name="creationDate" type="date" column="creationDate">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="modificationDate" type="datetime" column="modificationDate" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>
        <many-to-one field="duplicate" target-entity="Wvision\Bundle\ElementManagerBundle\Model\DuplicateInterface" inversed-by="objects" cascade="all">
            <join-column name="duplicate_id" referenced-column-name="id" on-delete="CASCADE" on-update="CASCADE"/>
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
